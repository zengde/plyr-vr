{
  "name": "plyr-vr",
  "version": "0.0.3",
  "description": "A plugin to add 360 and VR video support to plyr.",
  "author": {
    "name": "zengde",
    "email": "admin@2dm.top"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/zengde/plyr-vr"
  },
  "main": "dist/plyr-vr.js",
  "module": "dist/plyr-vr.es.js",
  "scripts": {
    "netlify": "npm run build && node scripts/netlify.js",
    "build-test": "cross-env-shell TEST_BUNDLE_ONLY=1 'npm run build'",
    "build-prod": "cross-env-shell NO_TEST_BUNDLE=1 'npm run build'",
    "build-gulp": "gulp build",
    "build": "npm-run-all -s clean -p build-gulp",
    "build:js": "rollup -c scripts/rollup.config.js",
    "build:css": "node-sass src/plugin.scss dist/plyr-vr.css --output-style=compressed --linefeed=lf",
    "clean": "shx rm -rf ./dist ./test/dist && shx mkdir -p ./dist ./test/dist",
    "lint": "vjsstandard",
    "prepublishOnly": "npm-run-all build-prod",
    "start": "npm-run-all -p server watch",
    "server": "karma start scripts/karma.conf.js --singleRun=false --auto-watch",
    "test": "npm run build-test && karma start scripts/karma.conf.js",
    "posttest": "shx cat test/dist/coverage/text.txt",
    "preversion": "npm test",
    "version": "is-prerelease || npm run update-changelog && git add CHANGELOG.md",
    "update-changelog": "conventional-changelog -p videojs -i CHANGELOG.md -s",
    "watch": "npm-run-all -p watch:*",
    "watch:js": "npm run build:js -- -w",
    "watch:css": "npm run build:css -- -w"
  },
  "keywords": [
    "plyr",
    "plyr-plugin",
    "plyr-vr"
  ],
  "vjsstandard": {
    "ignore": [
      "dist",
      "docs",
      "test/dist",
      "_ss"
    ],
    "jsdoc": false
  },
  "files": [
    "CONTRIBUTING.md",
    "dist/",
    "docs/",
    "index.html",
    "scripts/",
    "src/",
    "test/"
  ],
  "greenkeeper": {
    "ignore": [
      "three"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.5.5",
    "global": "^4.4.0",
    "three": "0.137.0",
    "plyr": "^3.5.4",
    "webvr-polyfill": "0.10.6"
  },
  "devDependencies": {
    "@videojs/generator-helpers": "^1.1.0",
    "cross-env": "^6.0.3",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^6.0.0",
    "gulp-better-rollup": "^4.0.1",
    "gulp-clean-css": "^4.0.0",
    "gulp-filter": "^5.1.0",
    "gulp-header": "^2.0.7",
    "gulp-imagemin": "^5.0.3",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-size": "^3.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-svgstore": "^7.0.1",
    "gulp-terser": "^1.1.7",
    "karma": "^4.0.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-qunit": "^4.0.0",
    "node-sass": "^4.12.0",
    "omnitone": "^1.3.0",
    "rollup": "^1.12.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-re": "^1.0.7",
    "sinon": "^7.2.2",
    "videojs-generate-rollup-config": "^5.0.1",
    "videojs-standard": "^8.0.4"
  },
  "browserslist": [
    "defaults",
    "ie 11"
  ],
  "lint-staged": {
    "*.js": [
      "vjsstandard --fix",
      "git add"
    ],
    "README.md": [
      "doctoc --notitle",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
